{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "clang++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++20",
        "-g",
        "-I",
        "../include",
        "-o",
        "${fileDirname}/../../builds/a.exe",
        "${fileDirname}/*.cpp",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wno-sign-compare"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      // "group": {
      //   "kind": "build",
      //   "isDefault": true
      // },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "Make",
      "command": "mingw32-make",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
