{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "clang++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++20",
        "-g",
        "-I",
        "../include",
        "-o",
        "${fileDirname}/a.out",
        "${fileDirname}/*.cpp",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wno-sign-compare"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
